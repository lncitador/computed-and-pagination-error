{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./*"],
    },
  },
  // Need to '../**/*.ts' to include the files from the parent directory
  "include": ["./**/*.ts", "./**/*.tsx",  "../**/*.ts"],
}